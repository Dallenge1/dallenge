{
  "id": "/?source=pwa",
  "start_url": "/dashboard",
  "name": "Dallenge",
  "short_name": "Dallenge",
  "description": "Your all-in-one platform for learning, wellness, and personal growth.",
  "lang": "en",
  "dir": "auto",
  "scope": "/",
  "display": "standalone",
  "display_override": [
    "standalone",
    "window-controls-overlay"
  ],
  "background_color": "#000000",
  "theme_color": "#E53E3E",
  "orientation": "any",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": [
    "education",
    "lifestyle",
    "social",
    "health"
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Main social feed"
    },
    {
      "src": "/screenshots/screenshot-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Challenge leaderboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Open Feed",
      "short_name": "Feed",
      "description": "View the community social feed",
      "url": "/feed",
      "icons": [
        {
          "src": "/icons/shortcut-feed.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Profile",
      "short_name": "Profile",
      "description": "View your user profile",
      "url": "/profile",
      "icons": [
        {
          "src": "/icons/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-receiver",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/jpeg",
            "image/png",
            "image/webp",
            "image/gif",
            "video/mp4",
            "video/webm"
          ]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+dallenge",
      "url": "/?deeplink=%s"
    }
  ]
}